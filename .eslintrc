{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ios.js", ".android.js"]
      }
    }
  },
  "globals": {
    "require": false,
    "module": false,
    "fetch": false,
    "__DEV__": false,
    "window": false,
    "__dirname": false,
    "describe": false,
    "it": false,
    "beforeEach": false,
    "afterEach": false
  },
  "rules": {
    "react-native/no-unused-styles": 2,
    "react-native/split-platform-components": 2,
    "react-native/no-inline-styles": 2,
    "react-native/no-color-literals": 2,
    "import/no-unresolved": [2, { ignore: ['\.png$'] }],
    "global-require": 0,
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": 0,
  }
}
